{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    // If typescript can't find a particular type, chances are you need to add something
    // to this array
    "types": [
      "vite/client",
      "node",
      "dom-serial",
      "vite-plugin-pwa/client"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./", // Allow relative imports from src/ dir
    "rootDir": "./", // Allow code to back out of src/ if needed, e.g. to access package.json
  },
  "include": [
    "src"
  ]
}
